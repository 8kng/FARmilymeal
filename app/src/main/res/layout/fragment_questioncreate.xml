<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestioncreateFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:text="質問編集画面"
                    android:textColor="#4a4a4a"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="550sp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/layout_border"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/Question1editor"
                            android:layout_width="250sp"
                            android:layout_height="50sp"
                            android:layout_marginLeft="10dp"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="Title 1"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ToggleButton
                            android:id="@+id/textallowBtn1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_baseline_edit_24"
                            android:textOff=""
                            android:textOn="" />

                        <Button
                            android:id="@+id/messagesendBtn1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_send_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/layout_border"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/Question2editor"
                            android:layout_width="250sp"
                            android:layout_height="50sp"
                            android:layout_marginLeft="10dp"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="Title 2"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ToggleButton
                            android:id="@+id/textallowBtn2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_baseline_edit_24"
                            android:textOff=""
                            android:textOn="" />

                        <Button
                            android:id="@+id/messagesendBtn2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_send_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/layout_border"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/Question3editor"
                            android:layout_width="250sp"
                            android:layout_height="50sp"
                            android:layout_marginLeft="10dp"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="Title 3"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ToggleButton
                            android:id="@+id/textallowBtn3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_baseline_edit_24"
                            android:textOff=""
                            android:textOn="" />

                        <Button
                            android:id="@+id/messagesendBtn3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_send_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/layout_border"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/Question4editor"
                            android:layout_width="250sp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="Title 4"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ToggleButton
                            android:id="@+id/textallowBtn4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_baseline_edit_24"
                            android:textOff=""
                            android:textOn="" />

                        <Button
                            android:id="@+id/messagesendBtn4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_send_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/layout_border"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/Question5editor"
                            android:layout_width="250sp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:text="Title 5"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:ignore="DuplicateIds" />

                        <ToggleButton
                            android:id="@+id/textallowBtn5"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_baseline_edit_24"
                            android:textOff=""
                            android:textOn="" />

                        <Button
                            android:id="@+id/messagesendBtn5"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/ic_send_gray" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>